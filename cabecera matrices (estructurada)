
#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include <string>

using namespace std;


void suma(int mat1[20][20], int mat2[20][20],int n,int m)
{ int s[20][20];
	
	
			  for(int i=0; i<n; i++)
			  {for(int j=0; j<m; j++)
			    {
					s[i][j]=mat1[i][j]+mat2[i][j];
			    }
			  }
			  cout<<"la suma seria: \n";
			  for(int i=0; i<n; i++)
			  {for(int j=0; j<m; j++)
			    {
					cout<<s[i][j]<<"\t";
			    }
			   cout<<endl;
			  }
}

void resta(int mat1[20][20], int mat2[20][20],int n,int m)
{int s[20][20];
	for(int i=0; i<n; i++)
			  {for(int j=0; j<m; j++)
			    {
					s[i][j]=mat1[i][j]-mat2[i][j];
			    }
			  }
			  cout<<"la resta es igual a: ";
			  for(int i=0; i<n; i++)
			  {for(int j=0; j<m; j++)
			    {
					cout<<s[i][j]<<"\t";
			    }
			   cout<<endl;
			  }
}
void transpuesta(int mat1[20][20], int n,int m)
{int mat2[20][20];
	
	   
			  for(int i=0; i<n; i++)
			  {for(int j=0; j<m; j++)
			    {
					mat2[i][j]=mat1[j][i];
			    }
			  }
			  cout<<"la matriz transpuesta seria: \n";
		      for(int i=0; i<n; i++)
			  {for(int j=0; j<m; j++)
			    {
					cout<<mat2[i][j]<<"\t";

			    }
		       cout<<endl; 
			  }
}
